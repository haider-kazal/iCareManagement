<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.piash.icaremanagement.InsertHospitalAddress">

    <EditText
        android:id="@+id/etHospitalName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hospital Name"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etHAddresss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hospital Address"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etHPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="+8801911111111"
        android:inputType="number"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etHLatitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etLogitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Longitude"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnSaveHAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"/>





</LinearLayout>
